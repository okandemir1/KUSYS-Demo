@model StudentActionDto

<form asp-action="@ViewBag.Action" enctype="multipart/form-data"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-success="OnFormSuccess">

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0" style="line-height:36px;">FirstName</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" type="text" placeholder="FirstName" />
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0" style="line-height:36px;">LastName</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" type="text" placeholder="LastName" />
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0" style="line-height:36px;">Birthdate</label>
        <div class="col-sm-10">
            <input asp-for="BirthDate" class="form-control" type="date" placeholder="BirthDate" />
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0" style="line-height:36px;">Role</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="RoleId">
                @foreach (var item in ViewBag.Roles)
                {
                    <!option value="@item.Id" @Html.Raw(Model != null && Model.RoleId == item.Id ? "selected" : "")>@item.Name</!option>
                }
            </select>
        </div>
    </div>


    @if (Model != null && Model.StudentId != null)
    {
        <input asp-for="StudentId" type="hidden" />
        <input asp-for="Username" type="hidden" />
        <div class='form-group'>
            <div class='offset-sm-2'>
                <button type='submit' class='btn btn-primary ml-3'>Güncelle</button>
            </div>
        </div>
    }
    else
    {
        <div class="form-group mb-3 row">
            <label class="control-label text-md-right col-sm-2 m-0" style="line-height:36px;">Username</label>
            <div class="col-sm-10">
                <input asp-for="Username" class="form-control" type="text" placeholder="Username" />
            </div>
        </div>

        <div class="form-group mb-3 row">
            <label class="control-label text-md-right col-sm-2 m-0" style="line-height:36px;">Password</label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            </div>
        </div>

        <div class='form-group'>
            <div class='offset-sm-2'>
                <button type='submit' class='btn btn-success ml-3'>Ekle</button>
            </div>
        </div>
    }
</form>