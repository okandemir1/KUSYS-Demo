@model StudentActionDto

<form asp-action="@ViewBag.Action" enctype="multipart/form-data"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-success="OnFormSuccess">

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0" style="line-height:36px;">Adı</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" type="text" placeholder="Adı" />
        </div>
    </div>


    @if (Model != null && Model.StudentId != null)
    {
        <input asp-for="StudentId" type="hidden" />
        <div class='form-group'>
            <div class='offset-sm-2'>
                <button type='submit' class='btn btn-primary ml-3'>Güncelle</button>
            </div>
        </div>
    }
    else
    {
        <div class='form-group'>
            <div class='offset-sm-2'>
                <button type='submit' class='btn btn-success ml-3'>Ekle</button>
            </div>
        </div>
    }
</form>